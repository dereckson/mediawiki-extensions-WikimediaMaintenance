#!/bin/bash

if [ -z $1 ];then
	echo "Usage: make-all-blobs <server> [<table name>]"
	exit 1
fi
server=$1
if [ -z $2 ]; then
	table=blobs
else
	table=$2
fi

. /usr/local/apache/common/multiversion/MWRealm.sh
FILE=`getRealmSpecificFilename /usr/local/apache/common/all.dblist`

for db in `<$FILE`;do
	echo "CREATE DATABASE IF NOT EXISTS $db" | mysql -u wikiadmin -p`wikiadmin_pass` -h $server && \
	sed "s/blobs\>/$table/" blobs.sql | mysql -u wikiadmin -p`wikiadmin_pass` -h $server $db
done

